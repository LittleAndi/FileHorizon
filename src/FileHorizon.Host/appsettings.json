{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Polling": {
    "IntervalMilliseconds": 1000,
    "BatchReadLimit": 10
  },
  "FileSources": {
    "Sources": [
      {
        "Name": "inbox",
        "Path": "C:/Temp/FileHorizon/Inbox",
        "Pattern": "*.*",
        "Recursive": true,
        "MoveAfterProcessing": false,
        "MinStableSeconds": 2
      }
    ]
  },
  "FileDestination": {
    "RootPath": "C:/Temp/FileHorizon/Outbox",
    "CreateDirectories": true
  },
  "Features": {
    "UseSyntheticPoller": true
  }
}
