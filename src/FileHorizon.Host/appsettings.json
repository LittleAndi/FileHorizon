{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Polling": {
    "IntervalMilliseconds": 1000,
    "BatchReadLimit": 10
  },
  "FileSources": {
    "Sources": [
      {
        "Name": "inbox-A",
        "Path": "C:/Temp/FileHorizon/InboxA",
        "Pattern": "*.*",
        "Recursive": true,
        "MoveAfterProcessing": false,
        "MinStableSeconds": 2,
        "DestinationPath": "C:/Temp/FileHorizon/OutboxA",
        "CreateDestinationDirectories": false
      },
      {
        "Name": "inbox-B",
        "Path": "C:/Temp/FileHorizon/InboxB",
        "Pattern": "*.*",
        "Recursive": true,
        "MoveAfterProcessing": true,
        "MinStableSeconds": 2,
        "DestinationPath": "C:/Temp/FileHorizon/OutboxB",
        "CreateDestinationDirectories": true
      }
    ]
  },
  "Features": {
    "UseSyntheticPoller": true
  }
}
